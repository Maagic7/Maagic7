FUNCTION m7_MAP_Move_8x : VOID
 TITLE ='Moves an entry of a 8x mapping table to 1st/last position'

// ==============================================================================
// MAP_Move
 // Schiebt das ausgewählte Gerät an die erste/letzte Startposition (1/iMaxDevice)
 // Mapping Tabelle => ioMAP[iDeviceNo]:=1
 // so funktiniert die Mapping Tabelle
 // MAP[1] := 4  // MAP[1] ist die Startposition der Pumpe 1, 4 => Pumpe startet als 4te
 // MAP[2] := 1  // MAP[2] ist die Startposition der Pumpe 2; 1 => Pumpe startet als 1te

// ==============================================================================
// 
// AUTHOR: Stefan Maag, Dipl.-Ing. (FH) Elektrotechnik 
// DATE: 07/2012
//
// CHANGELOG:
// ------------------------------------------------------------------------------
// DATE         NAME        DESCRIPTION
// ------------------------------------------------------------------------------
// 29.09.2022   S.Maag      sorting logic changed, because of wrong sorting
//                          in some cases.
// 01.03.2021   S.Maag      used MaxDevice for MoveLast  
// 13.02.2021   S.Maag      added input parameter iMaxDevice
// 07.04.2020   S.Maag      Coverted to SCL 
//                          Now support 2 mapping modes InToOut and OutFromIn
//                          old version from 2012 was only for OutFromIn
// ------------------------------------------------------------------------------

    VERSION : '3.1'
    AUTHOR  : 'S.Maag'
    FAMILY  : 'Maagic7'

CONST
   cst_maxDevice := 8; 
END_CONST

VAR_INPUT
    // Die Eingänge könnte man theoretisch auch als ARRAY übergen, das scheint auf
    // den ersten Blick günstiger. Es lassen sich dann aber keine Signalverschaltungen
    // dafür am Baustein anbringen. Bei Einzelsignalen lassen sich diese direkt
    // am Bausteineingang zusammenbauen
    xSignal1 : BOOL;
    xSignal2 : BOOL;
    xSignal3 : BOOL;
    xSignal4 : BOOL;
    xSignal5 : BOOL;
    xSignal6 : BOOL;
    xSignal7 : BOOL;
    xSignal8 : BOOL;
   
    cfgMove_FirstLast : BOOL; // Konfiguration für sortieren an den Anfang (First) oder ans Ende (Last) 
    iMaxDevice : INT;  // Anzahl Geräte 2..4
END_VAR

VAR_IN_OUT 
    ioMAP : ARRAY[1..cst_maxDevice] OF INT; // Mapping Table
END_VAR

VAR_TEMP
    I, J : INT;
    iDevicePos : INT;
    iSetPos : INT;
    tmp_MaxDevice :INT;
    xSIG : ARRAY[1..cst_maxDevice] OF BOOL;  // Signal ARRAY 
    xEnable : ARRAY[1..cst_maxDevice] OF BOOL; // Array für Sperrsignal bereits fest einsortierter Devices lo=gesperrt!
END_VAR
    
BEGIN

    tmp_MaxDevice := LIMIT (MN:=2, IN:= iMaxDevice, MX:= cst_maxDevice);
   
    xSIG[1] := xSignal1;
    xSIG[2] := xSignal2;
    xSIG[3] := xSignal3;
    xSIG[4] := xSignal4;
    xSIG[5] := xSignal5;
    xSIG[6] := xSignal6;
    xSIG[7] := xSignal7;
    xSIG[8] := xSignal8;
    
    xEnable[1] := TRUE;
    xEnable[2] := TRUE;
    xEnable[3] := TRUE;
    xEnable[4] := TRUE;
    xEnable[5] := TRUE;
    xEnable[6] := TRUE;
    xEnable[7] := TRUE;
    xEnable[8] := TRUE;
       
   IF cfgMove_FirstLast THEN       
        // ----------------------------------------------------------------------
        //  An das ENDE schieben (letzte Startposition (iMaxDevice)
        // ----------------------------------------------------------------------
        
        // fuer den ersten Schleifendurchlauf (xSignal1) ist die Zielposition ganz am Ende (z.B. 8)
        // da das erste Signal die höchste Priorität hat, wird es fest an der Endposition einsortiert
        // das 2te Signal dann an Position 7. Sonst würde ständig umsortiert, wenn mehrere Signale 
        // für ans Ende schieben gleichzeitig anliegen. Dabei entsteht in manchen Situationen Chaos,
        // so dass die Mapping-Tabelle völlig durcheinander ist! (Das war der Fehler bis 29.09.2022)
        iSetPos := tmp_MaxDevice;             

        // Alle Positionen durchlaufen            
        FOR J:=1 TO tmp_MaxDevice DO // tmp_MaxDevice
            iDevicePos := ioMAP[J]; // aktuelle Startposition aktuelles Device
            
            IF xSIG[J] THEN
            // Signal an ENDE schieben ist aktiv!
                
                // Startreihenfolge wird aktulles Device fest einsortieren, wenn Signal=TRUE
                // d.h. für weitere Sortierung durch nachfolgende Devices sperren
                xEnable[J]:=FALSE;  // Sortierfreitgabe für Device=OFF => Device fest einsortiert
                
                // hier alle Geräte, die noch nicht fest einsortiert sind verschieben 
                // d.h. alle Geräte, die hinter dem aktuellen lagen, um eins nach vorne
                FOR I:=1 TO tmp_MaxDevice DO
                    IF xENABLE[I] THEN
                        IF (ioMAP[I] > 0) AND (ioMAP[I] > iDevicePos) THEN
                            ioMAP[I] := ioMAP[I] -1;  // Startposition des Gerätes um 1 nach vorne
                        END_IF;
                    END_IF;
                END_FOR; 
              
                ioMAP[J] := iSetPos;
            END_IF;
            IF xSIG[J] THEN 
                iSetPos := iSetPos -1;
            END_IF;
        END_FOR;

    ELSE
        // ----------------------------------------------------------------------
        //  An den Anfang schieben (erste Startposition (1)
        // ----------------------------------------------------------------------

        iSetPos := 1;
       
        FOR J:=1 TO tmp_MaxDevice DO
            iDevicePos := ioMAP[J];

            IF xSIG[J] THEN 
            // Signal an ENDE schieben ist aktiv!
                
                // Startreihenfolge wird aktulles Device fest einsortieren, wenn Signal=TRUE
                // d.h. für weitere Sortierung durch nachfolgende Devices sperren
                xEnable[J]:=FALSE;  // Sortierfreitgabe für Device=OFF => Device fest einsortiert

                // hier alle Geräte, die noch nicht fest einsortiert sind verschieben 
                // d.h. alle Geräte, die vor dem aktuellen lagen, um eins nach hinten
                FOR I:=1 TO tmp_MaxDevice DO
                   IF xENABLE[I] THEN
                       IF (ioMAP[I] < iDevicePos) AND (ioMAP[I] > 0) THEN
                            ioMAP[I] := ioMAP[I] +1;  // Startposition des Gerätes um 1 nach hinten
                        END_IF;
                    END_IF;
                END_FOR;
                
                ioMAP[J] := iSetPos;
            END_IF;
            IF xSIG[J] THEN 
                iSetPos := iSetPos +1;
            END_IF;
       END_FOR;

    END_IF;  

END_FUNCTION

