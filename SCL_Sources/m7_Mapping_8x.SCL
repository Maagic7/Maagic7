                memOUT[I] := memIN[MAP];
            ELSE
               memOUT[I] := inZeroVal;
            END_IF; 
        END_FOR;

    ELSE
    // InToOut
    // inINT_x => OUT(MAP_x]
         FOR I:=1 TO cst_maxDevice DO
